<table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th colspan="4">
        Stage 1
      </th>
      <th></th>
      <th colspan="4">
        Stage 2
      </th>
      <th></th>
      <th colspan="4">
        Stage 3
      </th>
    </tr>
    <tr>
      <th>No.</th>
      <th>Photo</th>
      <th>Name</th>
      <th>Candy</th>
      <th></th>

      <th>No.</th>
      <th>Photo</th>
      <th>Name</th>
      <th>Candy</th>
      <th></th>

      <th>No.</th>
      <th>Photo</th>
      <th>Name</th>
      <th>Candy</th>
    </tr>
  </thead>
  <tbody>
    {{#each species}}
    <tr>
      {{#each stages}}
      <td>
        #{{number}}
      </td>
      <td>
        <a href="https://pokemondb.net/pokedex/{{url name}}" target="_blank">
          <img src="https://img.pokemondb.net/artwork/{{icon name}}.jpg" title="{{name}}"/>
        </a>
      </td>
      <td>
        <a href="https://pokemondb.net/pokedex/{{url name}}" target="_blank">
          {{name}}
        </a>
      </td>
      <td>
        {{candy}}
      </td>
      {{#unless @last}}
        <td class="arrow">
          &#8594;
        </td>
      {{/unless}}
      {{/each}}
    </tr>
    {{/each}}
  </tbody>
</table>
